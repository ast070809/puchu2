        %a{href: new_user_registration_path}
          =image_tag('solo-student.jpg', alt: 'slider image', style: " top:30px; left: 650px; slidedirection : right; slideoutdirection : bottom; durationin : 1500; durationout : 1500; ", class: 'ls-s-1' )
          
        
