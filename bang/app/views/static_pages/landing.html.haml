.layer_slider
  #layerslider-container-fw
    #layerslider{style: "width: 100%; height: 500px; margin: 0px auto; "}
      / First Slide
      .ls-layer{style: "slidedirection: right; transition2d: 24,25,27,28; "}
        =image_tag('bg1.jpg', alt: 'slider background', class: 'ls-bg')
        
        %span.ls-s-1{style: " text-transform: uppercase; line-height: 45px; font-size:35px; color:#fff; top:200px; left: 590px; slidedirection : top; slideoutdirection : bototm; durationin : 3500; durationout : 3500; "}
